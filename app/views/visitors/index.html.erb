<p id="notice"><%= notice %></p>

<h3>Welcome</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Platform</th>
      <th>Owner</th>
      <th>Designer</th>
      <th>Developer</th>
    </tr>
  </thead>

  <tbody>
    <%- @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.platform.try(:name) %></td>
        <td><%= idea.user.try(:name) %></td>
        <td><%= idea.arr_name_designer %></td>
        <td><%= idea.arr_name_developer %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Idea', new_idea_path %>
